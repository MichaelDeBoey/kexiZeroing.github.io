---
import PlaygroundLayout from '@/layouts/PlaygroundLayout.astro';

type projectType = {
	title: string;
	href: string;
	snapshot?: string;
};

const projects: projectType[] = [
	{
		title: 'Super Simple Vue Compiler',
		href: 'https://github.com/kexiZeroing/super-simple-vue-compiler',
		snapshot: 'https://raw.gitmirror.com/kexiZeroing/blog-images/main/super-simple-vue-compiler.png',
	},
	{ title: 'Super Simple Vite Dev Server', href: 'https://github.com/kexiZeroing/super-simple-vite-dev-server' },
	{ 
		title: 'Super Simple React SSR',
		href: 'https://github.com/kexiZeroing/super-simple-react-ssr',
		snapshot: 'https://raw.gitmirror.com/kexiZeroing/blog-images/main/super-simple-react-ssr-readme.png',
	},
	{ title: 'Super Simple RSC', href: 'https://github.com/kexiZeroing/super-simple-rsc' },
	{ title: 'Super Simple React Virtual DOM', href: 'https://github.com/kexiZeroing/super-simple-virtual-dom' },
	{ title: 'Super Simple State Management', href: 'https://github.com/kexiZeroing/super-simple-state-management' },
	{ title: 'Super Simple Bundler', href: 'https://github.com/kexiZeroing/super-simple-bundler' },
	{ title: 'Super Simple Authentication', href: 'https://github.com/kexiZeroing/super-simple-auth' },
	{ title: 'Super Simple HMR', href: 'https://github.com/kexiZeroing/super-simple-hmr' },
	{ title: 'Super Simple HTTP Router', href: 'https://github.com/kexiZeroing/super-simple-http-router' },
	{ title: 'Super Simple Module Federation', href: 'https://github.com/kexiZeroing/mf-vue2-and-vue3' },
];

const mustReads = [
	'https://howhttps.works',
	'https://developer.chrome.com/blog/inside-browser-part1',
	'https://www.patterns.dev',
	'https://www.totaltypescript.com/books/total-typescript-essentials',
	'https://www.totaltypescript.com/how-to-create-an-npm-package',
	'https://jvns.ca/blog/2024/11/18/how-to-import-a-javascript-library',
	'https://philipwalton.com/articles/the-state-of-es5-on-the-web',
	'https://www.developerway.com/posts/react-elements-children-parents',
	'https://www.joshwcomeau.com/react/server-components',
	'https://aurorascharff.no/posts/managing-advanced-search-param-filtering-next-app-router',
]
---

<PlaygroundLayout title="Playground List">
	<main class="container mx-auto p-4">
		<h1 class="text-xl font-bold mb-10 text-center">Super Simple Series: Show me the code</h1>
		<ul class="space-y-6 max-w-md mx-auto">
			{
				projects.map(({ href, title, snapshot }) => (
					<li>
						{snapshot ? (
							<details class="group">
								<summary class="text-blue-600 cursor-pointer flex items-center">
									<span class="-ml-5 mr-2 text-sm transform group-open:rotate-90 transition-transform">
										â–¶
									</span>
									<a href={href} target="_blank" class="text-blue-600 hover:underline">
										{title}
									</a>
								</summary>
								<div class="mt-2 text-gray-700">
									<img src={snapshot} alt={title} loading="lazy" />
								</div>
							</details>
						) : (
							<a href={href} target="_blank" class="text-blue-600 hover:underline">
								{title}
							</a>
						)}
					</li>
				))
			}
		</ul>
	</main>
	<hr class="my-8" />
	<main class="container mx-auto pt-4 pb-8">
		<h1 class="text-xl font-bold mb-10 text-center">Must Read Articles</h1>
		<ul class="space-y-6 max-w-md mx-auto">
			{
				mustReads.map((href) => (
					<li>
						<a href={href} target="_blank" class="text-blue-600 hover:underline">
							{href}
						</a>
					</li>
				))
			}
		</ul>
</PlaygroundLayout>
