export async function getStaticPaths() {
  let posts = await Astro.glob(`../../posts/*.{md,mdx}`);

  return posts.map((post) => {
    return ({
      params: { slug: post.frontmatter.slug },
      props: { post },
    })
  });
}

const { Content, frontmatter } = Astro.props.post;
